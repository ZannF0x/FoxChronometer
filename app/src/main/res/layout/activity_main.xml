<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Chronometer
        android:id="@+id/cronometro_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bt_iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cronometro_tempo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:text="Iniciar"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_pausar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_iniciar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:text="Pausar"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_zerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_pausar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:text="Zerar"
        android:textStyle="bold"

        />

</RelativeLayout>